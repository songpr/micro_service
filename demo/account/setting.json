{
    "service": {
        "baseURL": "Account",
        "routes": [
            {
                "method": "POST",
                "url": "/token",
                "schema": {
                    "response": {
                        "200": {
                            "$ref": "mservice-core#/api_sucess"
                        },
                        "400": {
                            "$ref": "mservice-core#/api_validate_error"
                        }
                    },
                    "body": {
                        "line_login": {
                            "anyOf": [
                                {
                                    "access_token": {
                                        "type": "string"
                                    }
                                },
                                {
                                    "id_token": {
                                        "type": "string"
                                    }
                                }
                            ]
                        }
                    }
                },
                "handler": {
                    "file": "account_handler.js",
                    "function": "getToken"
                },
                "logLevel": "debug"
            }
        ],
        "logger": {
            "level": "debug"
        }
    }
}