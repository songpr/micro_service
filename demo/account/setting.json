{
    "service": {
        "baseURL": "Account",
        "routes": [
            {
                "method": "POST",
                "url": "/token",
                "schema": {
                    "response": {
                        "200": {
                            "$ref": "mservice-core#/api_success"
                        },
                        "400": {
                            "$ref": "mservice-core#/api_validate_error"
                        }
                    },
                    "body": {
                        "type": "object",
                        "properties": {
                            "line_login": {
                                "type": "object",
                                "properties": {
                                    "access_token": {
                                        "type": "string"
                                    },
                                    "id_token": {
                                        "type": "string"
                                    }
                                },
                                "oneOf": [
                                    {
                                        "required": [
                                            "access_token"
                                        ]
                                    },
                                    {
                                        "required": [
                                            "id_token"
                                        ]
                                    }
                                ]
                            }
                        },
                        "required": [
                            "line_login"
                        ]
                    }
                },
                "handler": {
                    "file": "account_handler.js",
                    "function": "getToken"
                },
                "logLevel": "debug"
            }
        ],
        "logger": {
            "level": "debug"
        },
        "authentication": {
            "bearer": {
                "keys": [
                    "${services_secondary_auth_key}"
                ]
            }
        }
    }
}