{
    "service": {
        "baseURL": "home",
        "routes": [
            {
                "method": "GET",
                "url": "/",
                "handler": {
                    "file": "home_handler.js",
                    "function": "hi"
                },
                "logLevel": "debug"
            },
            {
                "method": "GET",
                "url": "/:name",
                "schema": {
                    "params": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "$ref": "thai-eng_name#"
                            }
                        }
                    }
                },
                "handler": {
                    "file": "home_handler.js",
                    "function": "hiUser"
                },
                "logLevel": "debug"
            }
        ],
        "logger": {
            "level": "debug"
        }
    }
}