{
    "ids": {
        "type": "string",
        "pattern": "^\\d+(,\\d+){0,1000}$"
    },
    "eng_field_name": {
        "type": "string",
        "pattern": "^[a-zA-Z][a-zA-Z0-9_\\-]*[a-zA-Z0-9]$"
    },
    "eng_field_name_pattern": {
        "pattern": "^[a-zA-Z][a-zA-Z0-9_\\-]*[a-zA-Z0-9]$"
    },
    "thai-eng_field_name": {
        "type": "string",
        "pattern": "^[ก-ฮเ-ไa-zA-Z][ก-๙a-zA-Z0-9_\\-]*[a-zA-Z0-9ก-๙]$"
    },
    "thai-eng_field_name_pattern": {
        "pattern": "^[ก-ฮเ-ไa-zA-Z][ก-๙a-zA-Z0-9_\\-]*[a-zA-Z0-9ก-๙]$"
    },
    "thai-eng_name": {
        "type": "string",
        "pattern": "^[ก-ฮเ-ไa-zA-Z][ก-๙a-zA-Z0-9 _\\-]+$"
    },
    "thai-eng_value": {
        "type": "string",
        "pattern": "^[ก-ฮเ-ไa-zA-Z][ก-๙a-zA-Z0-9_\\-]+$"
    },
    "thai-eng_search": {
        "type": "string",
        "pattern": "^[ก-ฮเ-ไ๑-๙a-zA-Z0-9_\\-!\\@][ก-๙a-zA-Z0-9_\\-!\\@]*$"
    },
    "thai-eng_json_value": {
        "type": "string",
        "pattern": "^[ก-๙a-zA-Z0-9&=_{}\\[\\],:%\\\"-]+$"
    },
    "datetime_string": {
        "anyOf": [
            {
                "type": "string",
                "pattern": "^([0-9]{4})-(0?[1-9]|1[0-2])-(0?[1-9]|[1-2][0-9]|3[0-1]) (2[0-3]|[01][0-9]):[0-5][0-9](:[0-5][0-9](\\.[0-9]{3})?)?$"
            },
            {
                "type": "string",
                "format": "date-time"
            },
            {
                "type": "string",
                "format": "date"
            }
        ]
    },
    "period": {
        "type": "array",
        "minItems": 2,
        "maxItems": 2,
        "items": {
            "$ref": "datetime_string#"
        }
    },
    "user": {
        "type": "object",
        "propertyNames": {
            "$ref": "eng_field_name_pattern#"
        },
        "properties": {
            "name": {
                "$ref": "thai-eng_name#"
            }
        },
        "patternProperties": {
            "^is_": {
                "type": "integer",
                "minimum": 0,
                "maximum": 1
            },
            "_date$": {
                "$ref": "datetime_string#"
            },
            "_datetime$": {
                "$ref": "datetime_string#"
            },
            "_at$": {
                "$ref": "datetime_string#"
            },
            "_time$": {
                "type": "string",
                "format": "time"
            },
            "_url$": {
                "type": "string",
                "format": "uri"
            },
            "_name$": {
                "$ref": "thai-eng_name#"
            },
            "_value$": {
                "$ref": "thai-eng_value#"
            }
        }
    },
    "api_success": {
        "type": "object",
        "properties": {
            "status": {
                "type": "string",
                "enum": [
                    "success"
                ]
            },
            "message": {
                "type": "string"
            },
            "data": {
                "type": "object",
                "description": "json response data"
            }
        },
        "required": [
            "status"
        ]
    },
    "api_error": {
        "type": "object",
        "properties": {
            "status": {
                "type": "string",
                "enum": [
                    "error"
                ]
            },
            "message": {
                "type": "string"
            }
        },
        "required": [
            "status",
            "message"
        ]
    },
    "api_validate_error": {
        "type": "object",
        "properties": {
            "status": {
                "type": "string",
                "enum": [
                    "validation error"
                ]
            },
            "error_code": {
                "type": "string",
                "description": "failure code for check type of error, this will hardly change",
                "pattern": "^[A-Z]{2,100}(_[A-Z0-9]{2,100}){0,10}$"
            },
            "message": {
                "type": "string"
            }
        },
        "required": [
            "status",
            "error_code"
        ]
    }
}